        <h1>Ticketing</h1>
        <h4>Register</h4>
        <form action="/api/v1/user/sign-up" method="post">
          <div class="mb-3">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" name='username' id="username" aria-describedby="username">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword" class="form-label">Password</label>
            <input type="password" class="form-control" name="userpwd" id="exampleInputPassword1">
          </div>
          <div class="mb-3">
            <label for="fullname" class="form-label">Full name</label>
            <input type="text" class="form-control" name='userfullname' id="userfullname" aria-describedby="userfullname">
          </div>

          <input type="submit" value="Register" />
        </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
